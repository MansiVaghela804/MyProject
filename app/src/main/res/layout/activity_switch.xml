<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI_Widgets.SwitchActivity">

    <Switch
        android:id="@+id/switchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/text_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Textview"
        android:layout_below="@id/switchButton"
        android:layout_centerInParent="true"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="@dimen/_20sdp"/>

    <ToggleButton
        android:id="@+id/toggle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_switch"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_40sdp"/>

    <TextView
        android:id="@+id/toggle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Textview"
        android:layout_below="@id/toggle_btn"
        android:layout_centerInParent="true"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="@dimen/_20sdp"/>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toggle_text"
        android:layout_marginTop="@dimen/_40sdp"/>

    <TextView
        android:id="@+id/seekbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Textview"
        android:layout_below="@id/seekbar"
        android:layout_centerInParent="true"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="@dimen/_20sdp"/>



</RelativeLayout>